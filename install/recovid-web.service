# ReCoVid web-app systemd configuration file
#
# This file should be placed in /lib/systemd/system/ directory

[Unit]
Description=Recodex Web App
Documentation=http://recodex.github.io/web-app/,https://github.com/ReCodEx/GlobalWiki/wiki
DefaultDependencies=true

[Service]
Type=simple
StandardInput=null
StandardOutput=null
StandardError=journal
User=recovid
Group=recovid
WorkingDirectory=/opt/recovid-web
ExecStart=/usr/bin/node /opt/recovid-web/bin/server.js

[Install]
WantedBy=multi-user.target
